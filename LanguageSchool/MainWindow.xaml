<Window x:Class="LanguageSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Comic Sans MS" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Height="100" Source="img/school_logo.png"></Image>
        <TextBlock Text="Language school" HorizontalAlignment="Center"></TextBlock>
        <Button Content="Назад" Name="ReturnBtn" Click="ReturnBtn_Click" HorizontalAlignment="Right"></Button>
        <Frame Name="MainFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
